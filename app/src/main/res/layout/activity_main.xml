<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.mkhan.tasbeeh.MainActivity">

    <TextView
        android:id="@+id/textViewCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="1000"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/dim_tv_counter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnReset"
        app:layout_constraintHorizontal_bias="0.498"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAdd" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="@dimen/dim_add_button_width"
        android:layout_height="@dimen/dim_add_button_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/layout_round_corner"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="sans-serif"
        android:text="+"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/dim_add_button_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/textViewCounter"
        app:layout_constraintRight_toRightOf="@+id/textViewCounter" />

    <Button
        android:id="@+id/btnMinus"
        style="@android:style/Widget.Button"
        android:layout_width="@dimen/dim_reset_button_width"
        android:layout_height="@dimen/dim_reset_button_height"
        android:layout_alignBaseline="@+id/btnAdd"
        android:layout_alignBottom="@+id/btnAdd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"

        android:layout_marginTop="0dp"
        android:background="@drawable/layout_round_corner"
        android:text="-"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/dim_reset_button_text_size"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnReset" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="@dimen/dim_reset_button_width"
        android:layout_height="@dimen/dim_reset_button_height"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/layout_round_corner"
        android:fontFamily="serif"
        android:text="Reset"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/dim_reset_button_text_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
